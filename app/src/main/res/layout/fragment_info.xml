<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".InfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/ConferenceNameTV"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:text="Conference Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/LocationTV"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Location"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/StartDateTV"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Start date"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/EndDateTV"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="End date"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:text="Contacts"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ContactsTV"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Contacts"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/TitleTransport"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:text="Transports"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/MetroTransportTV"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Metro transport"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/BusTransportTV"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Bus transport"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/TitleCodeConduct"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:text="Code of Conduct"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CodeConductTV"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Code of conduct"
        android:textSize="20sp" />

</LinearLayout>