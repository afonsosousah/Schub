<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ContactFormFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/ContactFormTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Form"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get in touch directly with us!"
        android:textColor="@color/textDisabled" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="35sp" />

    <TextView
        android:id="@+id/ContactTopicTV"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Topic"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <EditText
        android:id="@+id/topicMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edit_text"
        android:ems="10"
        android:gravity="start|top"
        android:hint="What is it about?"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/textDisabled" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <TextView
        android:id="@+id/ContactDescriptionTV"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Description"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <EditText
        android:id="@+id/descriptionMultiLine"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background_edit_text"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Tell us more about it..."
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textDisabled" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="24dp"
        android:background="@drawable/gradient"
        android:paddingLeft="32dp"
        android:paddingTop="12dp"
        android:paddingRight="32dp"
        android:paddingBottom="12dp"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/background"
        android:textSize="20sp" />

</LinearLayout>